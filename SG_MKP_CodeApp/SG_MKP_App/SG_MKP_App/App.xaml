<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SG_MKP_App.App">
    <Application.Resources>
        <!-- Application resource dictionary -->
        <ResourceDictionary>
            <!-- Pallete -->

            <!-- Cor do Titulo da MasterDetailPage -->
            <Color 
                x:Key="primary-back-title-color">
                #4a148c
            </Color>
            <!-- Cor da Fonte da MasterDetailPage -->
            <Color 
                x:Key="primary-title-color">
                    #FFFFFF
            </Color>
            <!-- Pallete-End -->
            <!-- Setando as cores nos componentes MasterDetailPage -->
            <Style 
                ApplyToDerivedTypes="true" 
                TargetType="NavigationPage">
                <Setter 
                    Property="BarBackgroundColor" 
                    Value="{StaticResource Key=primary-back-title-color}"
                />
                <Setter 
                    Property="BarTextColor" 
                    Value="{StaticResource Key=primary-title-color}"
                />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>